<Window x:Class="ConfigGUI.ConfigWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConfigGUI"
             mc:Ignorable="d" ResizeMode="NoResize"
             Closing="Window_Closing" Width="673.523" Height="420" Title="Config">
    <Grid Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="456"/>
        </Grid.ColumnDefinitions>

        <TreeView Name="configsTreeView" Margin="5"/>
        <Border Margin="5" BorderBrush="Black" BorderThickness="1" Background="White" Grid.Column="1" >
            <ScrollViewer Name="configRegion" VerticalScrollBarVisibility="auto">
                <StackPanel/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
